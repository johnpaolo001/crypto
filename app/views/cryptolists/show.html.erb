<% for x in @show_crypto %>
  <% if @cryptolist.symbol.upcase == x["symbol"] %>
    <% crypto_name = x["name"] %>
    <% crypto_price = x["price_usd"] %> <br>
    <% crypto_rank = x["rank"] %>
  <% end %>
<% end %>



<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%= crypto_name %></h3>
  </div>
  <div class="panel-body">
    <p>
      <h1><%= @cryptolist.symbol.upcase %></h1>
    </p>

    <p>
      <strong>Current Price: </strong> <%= number_to_currency(crypto_price) %>
    </p>

    <p>
      <strong>Rank: </strong> <%= crypto_rank %>
    </p>

    <p>
      <strong>Cost per:</strong>
      <%= @cryptolist.cost_per %>
    </p>

    <p>
      <strong>Amount owned:</strong>
      <%= @cryptolist.amount_owned %>
    </p>

  </div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_cryptolist_path(@cryptolist) %> |
    <%= link_to 'Delete', cryptolist_path(@cryptolist), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', cryptolists_path %>
  </div>
</div>
